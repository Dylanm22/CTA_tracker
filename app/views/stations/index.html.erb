<p style="color: green"><%= notice %></p>

<h1>Stations</h1>
<table>
  <thead>
    <tr>
      <th>Station</th>
      <th>Run</th>
      <th>Line</th>
      <th>Destination</th>
      <th>ETA</th>
    </tr>
  </thead>
  <tbody>
  <% @stations.each do |station| %>
      <tr>
        <td><%= station.name %></td>
        <td><%= station.run_number %></td>
        <td><%= station.line %></td>
        <td><%= station.destination %></td>
        <td><%= station.eta %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New station", new_station_path %>
